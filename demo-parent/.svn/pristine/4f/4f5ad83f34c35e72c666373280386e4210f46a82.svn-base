Ext.define('Cxt.Regex', function () {
    var me; // holds our singleton instance

    return {
        singleton: true,

        code: {
            regex: /^[\w\.\-\+]+$/,
            regexText: '只能包含字母、数字、\"_\"、\".\"、\"-\"、\"+\"。'
        },

        mail: {
            regex: /^(\w)+(\.\w+)*@(\w)+((\.\w{2,3}){1,3})$/,
            regexText: '不正确的邮件地址'
        }
    }
});